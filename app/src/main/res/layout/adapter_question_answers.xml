<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Facts of Life * Monday"
        android:id="@+id/quick_comments_textview"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/tertiary_text_dark" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What is the nicest thing you have done that backfired?"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/quick_comments_textview"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:id="@+id/comments_question_textview"
        android:textColor="@android:color/primary_text_light" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/comments_question_textview"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Those Extra 20rs!! Once we had to replace our water purifier cartidge. So we called the nearest help center and a guy came and fixed it.The super waewsome philantrhropist in .. (more)"
        android:layout_marginTop="10dp"
        android:id="@+id/comments_answer_textview"
        android:textColor="@android:color/primary_text_light"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Bookmark"
        android:layout_marginTop="10dp"
        android:id="@+id/bookmark_textview"
        android:layout_below="@+id/comments_answer_textview"
        android:background="@color/colorPrimaryLight"
        android:textColor="@color/colorPrimary"
        android:layout_alignParentLeft="true"
        android:textStyle="bold"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Comment"
        android:textStyle="bold"
        android:id="@+id/comments_textview"
        android:layout_alignTop="@+id/bookmark_textview"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Read More"
        android:textStyle="bold"
        android:id="@+id/readmore_textview"
        android:layout_alignTop="@+id/comments_textview"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
